<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/emp_name"
        android:inputType="textPersonName"
        android:hint="Empoyee Name"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/emp_branch"
        android:inputType="textPersonName"
        android:hint="Empoyee branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/emp_designation"
        android:inputType="textPersonName"
        android:hint="Empoyee Designation"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/emp_salary"
        android:inputType="number"
        android:hint="Empoyee salary"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />


    <Button
        android:text="Save"
        android:textAllCaps="false"
        android:onClick="saveEmployee"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>